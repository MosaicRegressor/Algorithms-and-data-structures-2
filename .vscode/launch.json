{
    "version": "0.2.0",
    "configurations": [
        {
            "name":"Build ONE c src, then launch with args and debug :)",
            "type":"cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": ["aa", "aaaaa"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "externalConsole": false,
            "preLaunchTask": "Compile and debug C :3"
        },
        {
            "name": "Make and Debug with args the current C source :3 ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}.out",  // o dove si trova l'eseguibile
            "args": ["ababahljfkgks", "asiabbbbbaefuyfkgkhla"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                "description": "Abilita stampa auto",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with make", // ‚Üê QUI COLLEGHI la task di build
            "miDebuggerPath": "/usr/bin/gdb"    // o il path a gdb
        }
    ]
}